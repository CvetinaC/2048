@model _2048.Models.GameVM
{
@ViewBag.Title ="Index";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title - My ASP.NET Application</title>*@
    <link href="@Url.Content("~/Content/Index.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/assets/js/Main.js"></script>
</head>
<body>
    @Html.BeginForm()
    <div class="container">
        <div class="jumbotron container">
            <h1>Play 2048</h1>
            <div id="score">Score=@Model.Score</div>
            <div id="result">MaxTile=@Model.Result</div>
            <button type="submit" name="submit" value="New">New Game</button>
            <p id="gameStatus">@if (Model.hasBeenWon==true) { <label>You Won!</label>; } else if (Model.isGameOver==true) { <label>Game Over!</label>; }
            else { }
        </p>
        <div class="game-container">
            <div class="grid-container">
                <div class="grid-row">
                    <div class="grid-cell" id="cell_0_0">@if (Model.Matrix[0, 0] != 0){ @Model.Matrix[0, 0]}else {  }</div>
                    <div class="grid-cell" id="cell_0_1">@if (Model.Matrix[0, 1] != 0){@Model.Matrix[0, 1]}else { }</div>
                    <div class="grid-cell" id="cell_0_2">@if (Model.Matrix[0, 2] != 0){@Model.Matrix[0, 2]}else { }</div>
                    <div class="grid-cell" id="cell_0_3">@if (Model.Matrix[0, 3] != 0){@Model.Matrix[0, 3]}else { }</div>
                </div>
                <div class="grid-row">
                    <div class="grid-cell" id="cell_1_0">@if (Model.Matrix[1, 0] != 0){@Model.Matrix[1, 0]}else { }</div>
                    <div class="grid-cell" id="cell_1_1">@if (Model.Matrix[1, 1] != 0){@Model.Matrix[1, 1]}else { }</div>
                    <div class="grid-cell" id="cell_1_2">@if (Model.Matrix[1, 2] != 0){@Model.Matrix[1, 2]}else { }</div>
                    <div class="grid-cell" id="cell_1_3">@if (Model.Matrix[1, 3] != 0){@Model.Matrix[1, 3]}else { }</div>
                </div>
                <div class="grid-row">
                    <div class="grid-cell" id="cell_2_0">@if (Model.Matrix[2, 0] != 0){@Model.Matrix[2, 0]}else { }</div>
                    <div class="grid-cell" id="cell_2_1">@if (Model.Matrix[2, 1] != 0){@Model.Matrix[2, 1]}else { }</div>
                    <div class="grid-cell" id="cell_2_2">@if (Model.Matrix[2, 2] != 0){@Model.Matrix[2, 2]}else { }</div>
                    <div class="grid-cell" id="cell_2_3">@if (Model.Matrix[2, 3] != 0){@Model.Matrix[2, 3]}else { }</div>
                </div>
                <div class="grid-row">
                    <div class="grid-cell" id="cell_3_0">@if (Model.Matrix[3, 0] != 0){@Model.Matrix[3, 0]}else { }</div>
                    <div class="grid-cell" id="cell_3_1">@if (Model.Matrix[3, 1] != 0){@Model.Matrix[3, 1]}else { }</div>
                    <div class="grid-cell" id="cell_3_2">@if (Model.Matrix[3, 2] != 0){@Model.Matrix[3, 2]}else { }</div>
                    <div class="grid-cell" id="cell_3_3">@if (Model.Matrix[3, 3] != 0){@Model.Matrix[3, 3]}else { }</div>
                </div>
            </div>
        </div>
        <button type="submit" name="submit" value="Up">Up</button>
        <button type="submit" name="submit" value="Down">Down</button>
        <button type="submit" name="submit" value="Right">Right</button>
        <button type="submit" name="submit" value="Left">Left</button>
    </div>
</body>
</html>
